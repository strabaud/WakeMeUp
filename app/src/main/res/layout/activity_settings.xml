<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:columnCount="1"
    android:rowCount="8"
    tools:context="com.example.vito.wakemeup.Settings">


    <TextView
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/settingsTitle"
        android:layout_gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/name"
        android:layout_gravity="left"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/name"
        android:textColor="@android:color/holo_orange_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="left"
        android:textSize="24dp"
        android:focusable="false"
        />

    <TextView
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/favoriteActivities"
        android:layout_gravity="left"
        android:textSize="20dp"/>

    <Button
        android:text="@string/activity1"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_gravity="left"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/bt_activity1"
        />
    <Button
        android:text="@string/activity2"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_gravity="left"
        android:background="@android:color/white"
        android:id="@+id/bt_activity2"
        />
    <Button
        android:text="@string/activity3"
        android:layout_column="0"
        android:layout_row="6"
        android:layout_gravity="left"
        android:background="@android:color/holo_red_dark"
        android:id="@+id/bt_activity3"
        />

    <Button
        android:text="@string/ok"
        android:layout_column="0"
        android:layout_row="7"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@android:color/holo_orange_light"
        android:id="@+id/bt_Ok"
        />
</GridLayout>
